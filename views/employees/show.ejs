<%- include('../partials/header') %>

<h2>View employee</h2>
<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Department</th>
			<th>Approved Software</th>
			<th>Purchased</th>
            <th>Full Time Employee</th>
		</tr>
	</thead>
	<tbody>
		
		<tr>
			<td><%= employee.name %></td>
			<td><%= employee.department %></td>
			<td><% employee.approvedSoftware.forEach(function(e) { %>
				<%= e%>
			<%}); %>
			</td>
			<td><%= employee.purchased.toLocaleDateString() %></td>
            <td><%= employee.fullTimeEmployee ? 'Yes' : 'No' %></td>
			<td>
				<form action="/employees/<%= employee.id %>?_method=DELETE" method="POST"
					class="delete-form">
					<button type="submit">Delete Employee</button>
				</form>
			</td>			
		</tr>
	</tbody>	
</table><br>

